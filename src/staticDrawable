#pragma once

#include "detailParent.hpp"

namespace detail {
    template <typename DrawPolicy>
    class StaticDrawable : public Drawable<DrawPolicy> {
    public:
        StaticDrawable(float _xInit, float _yInit, sf::Sprite & _spr)
            : Drawable<DrawPolicy>{_xInit, _yInit} {
            spr = _spr;
            spr.setPosition(_xInit, _yInit);
        }
        const sf::Sprite & getSprite() const { return spr; }
        template <typename Game>
        void update(const sf::Time & elapsedTime, Game *) {}
        
    private:
        sf::Sprite spr;
    };
}
